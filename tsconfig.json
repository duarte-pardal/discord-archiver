{
	"compilerOptions": {
		"target": "ES2024",
		"module": "node16",
		"lib": ["ESNext"],
		"moduleResolution": "node16",
		"esModuleInterop": true,

		"outDir": "build",

		"strict": true,
		"exactOptionalPropertyTypes": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"incremental": true,
		"sourceMap": true
	},
	"include": ["src/**/*"]
}
